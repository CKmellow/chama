<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allows HTTP traffic only to localhost (emulator) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>

    </domain-config>

    <!-- Optional: allows HTTP to your LAN IP if using a physical device -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.100.27</domain>
    </domain-config>

</network-security-config>
