<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.chama.ChamaDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_chama_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chama Name"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_edit_chama"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:visibility="gone" 
                    tools:visibility="visible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chama_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Chama Type" />

            <TextView
                android:id="@+id/tv_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created: Jan 1, 2024" />

            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members: 1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contribution Rules"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contribution_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Contribution: KES 5,000" />

            <TextView
                android:id="@+id/tv_contribution_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule: Monthly" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loan Policies"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Interest Rate: 10%" />

            <TextView
                android:id="@+id/tv_max_loan_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Loan: 3x Savings" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_view_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Members List" />

                <Button
                    android:id="@+id/btn_view_contributions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Contribution History" />

                <Button
                    android:id="@+id/btn_view_reports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Financial Reports" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
