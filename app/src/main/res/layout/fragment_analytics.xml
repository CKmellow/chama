<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/wavyHeader"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/ic_wave_pattern"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/headerChamaAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chama Analytics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@id/wavyHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/userCardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/headerChamaAnalysis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- User cards will be added dynamically -->
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
