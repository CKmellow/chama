<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Fragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.chamapp.ui.auth.SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Welcome Fragment -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.chamapp.ui.auth.WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.chamapp.ui.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordEmailFragment"
            app:destination="@id/resetPasswordEmailFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Sign Up Fragment -->
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.chamapp.ui.auth.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Reset Password Email Fragment -->
    <fragment
        android:id="@+id/resetPasswordEmailFragment"
        android:name="com.example.chamapp.ui.auth.ResetPasswordEmailFragment"
        tools:layout="@layout/fragment_reset_password_email">
        <action
            android:id="@+id/action_resetPasswordEmailFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

    <!-- Reset Password Fragment -->
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.chamapp.ui.auth.ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_passwordResetSuccessFragment"
            app:destination="@id/passwordResetSuccessFragment" />
    </fragment>

    <!-- Password Reset Success Fragment -->
    <fragment
        android:id="@+id/passwordResetSuccessFragment"
        android:name="com.example.chamapp.ui.auth.PasswordResetSuccessFragment"
        tools:layout="@layout/fragment_password_reset_success">
        <action
            android:id="@+id/action_passwordResetSuccessFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chamapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_logout"
            app:destination="@id/splashFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_createChamaFragment"
            app:destination="@id/createChamaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_joinChamaFragment"
            app:destination="@id/joinChamaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chamaDetailsFragment"
            app:destination="@id/chamaDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chamaDashboardFragment"
            app:destination="@id/chamaDashboardFragment"/>
        <action
            android:id="@+id/action_homeFragment_self"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mySavingsFragment"
            app:destination="@id/mySavingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myChamasFragment"
            app:destination="@id/myChamasFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updatesFragment"
            app:destination="@id/updatesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_investFragment"
            app:destination="@id/investFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.chamapp.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/mySavingsFragment"
        android:name="com.example.chamapp.ui.savings.MySavingsFragment"
        tools:layout="@layout/fragment_my_savings" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.chamapp.ui.analytics.AnalyticsFragment"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/updatesFragment"
        android:name="com.example.chamapp.ui.updates.UpdatesFragment"
        tools:layout="@layout/fragment_updates" />

    <fragment
        android:id="@+id/investFragment"
        android:name="com.example.chamapp.ui.invest.InvestFragment"
        tools:layout="@layout/fragment_invest" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.chamapp.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <!-- My Chamas Fragment -->
    <fragment
        android:id="@+id/myChamasFragment"
        android:name="com.example.chamapp.ui.chama.MyChamasFragment"
        tools:layout="@layout/fragment_my_chamas" />

    <!-- Create Chama Fragment -->
    <fragment
        android:id="@+id/createChamaFragment"
        android:name="com.example.chamapp.ui.chama.CreateChamaFragment"
        tools:layout="@layout/fragment_create_chama">
        <action
            android:id="@+id/action_createChamaFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_createChamaFragment_to_myChamasFragment"
            app:destination="@id/myChamasFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Join Chama Fragment -->
    <fragment
        android:id="@+id/joinChamaFragment"
        android:name="com.example.chamapp.ui.chama.JoinChamaFragment"
        tools:layout="@layout/fragment_join_chama" />

    <!-- Chama Details Fragment -->
    <fragment
        android:id="@+id/chamaDetailsFragment"
        android:name="com.example.chamapp.ui.chama.ChamaDetailsFragment"
        tools:layout="@layout/fragment_chama_details">
        <action
            android:id="@+id/action_chamaDetailsFragment_to_membersListFragment"
            app:destination="@id/membersListFragment" />
    </fragment>

    <!-- Members List Fragment -->
    <fragment
        android:id="@+id/membersListFragment"
        android:name="com.example.chamapp.ui.chama.MembersListFragment"
        tools:layout="@layout/fragment_members_list">
        <action
            android:id="@+id/action_membersListFragment_to_memberProfileFragment"
            app:destination="@id/memberProfileFragment" />
    </fragment>

    <!-- Member Profile Fragment -->
    <fragment
        android:id="@+id/memberProfileFragment"
        android:name="com.example.chamapp.ui.chama.MemberProfileFragment"
        tools:layout="@layout/fragment_member_profile" />

    <!-- Chama Dashboard Fragment (extra from first nav graph) -->
    <fragment
        android:id="@+id/chamaDashboardFragment"
        android:name="com.example.chamapp.ui.chama.ChamaDashboardFragment"
        tools:layout="@layout/fragment_chama_dashboard">
        <argument
            android:name="chamaName"
            app:argType="string" />
        <argument
            android:name="role"
            app:argType="string" />
        <argument
            android:name="myContributions"
            app:argType="string" />
        <argument
            android:name="totalBalance"
            app:argType="string" />
        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="statusColor"
            app:argType="string" />
        <argument
            android:name="nextMeeting"
            app:argType="string" />
    </fragment>

    <!-- Invest Fragment -->
    <fragment
        android:id="@+id/investFragment"
        android:name="com.example.chamapp.ui.invest.InvestFragment"
        tools:layout="@layout/fragment_invest" >
        <action
            android:id="@+id/action_investFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
